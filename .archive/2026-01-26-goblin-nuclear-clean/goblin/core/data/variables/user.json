{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "uDOS User Variables",
  "description": "User-defined variables for customization and preferences",
  "type": "object",
  "variables": {
    "USER-EMAIL": {
      "type": "string",
      "description": "User email address (optional)",
      "scope": "global",
      "default": "",
      "validation": {
        "pattern": "^[a-zA-Z0-9._%+-]*@?[a-zA-Z0-9.-]*\\.?[a-zA-Z]{0,}$"
      }
    },
    "USER-LOCATION": {
      "type": "string",
      "description": "User's home TILE code",
      "scope": "global",
      "default": "",
      "validation": {
        "pattern": "^[A-Z]{2}\\d{1,3}(-\\d{3})?$"
      }
    },
    "USER-SKILL-LEVEL": {
      "type": "string",
      "description": "User's skill level (beginner, intermediate, advanced)",
      "scope": "global",
      "default": "beginner",
      "validation": {
        "enum": ["beginner", "intermediate", "advanced"]
      }
    },
    "USER-PREFERENCES": {
      "type": "object",
      "description": "User preference settings",
      "scope": "global",
      "default": {
        "auto-save": true,
        "show-tips": true,
        "color-mode": "auto"
      },
      "properties": {
        "auto-save": {
          "type": "boolean",
          "default": true
        },
        "show-tips": {
          "type": "boolean",
          "default": true
        },
        "color-mode": {
          "type": "string",
          "enum": ["light", "dark", "auto"],
          "default": "auto"
        }
      }
    },
    "CUSTOM-VAR-1": {
      "type": "string",
      "description": "User-defined custom variable 1",
      "scope": "global",
      "default": "",
      "validation": {
        "maxLength": 500
      }
    },
    "CUSTOM-VAR-2": {
      "type": "string",
      "description": "User-defined custom variable 2",
      "scope": "global",
      "default": "",
      "validation": {
        "maxLength": 500
      }
    },
    "CUSTOM-VAR-3": {
      "type": "string",
      "description": "User-defined custom variable 3",
      "scope": "global",
      "default": "",
      "validation": {
        "maxLength": 500
      }
    },
    "PROJECT-PATH": {
      "type": "string",
      "description": "Current project path",
      "scope": "script",
      "default": "",
      "validation": {
        "pattern": "^[a-zA-Z0-9/_.-]*$"
      }
    },
    "MISSION-ACTIVE": {
      "type": "string",
      "description": "Currently active mission ID",
      "scope": "session",
      "default": "",
      "validation": {
        "pattern": "^[a-zA-Z0-9_-]*$"
      }
    }
  },
  "meta": {
    "version": "1.0.0",
    "created": "2025-12-01",
    "allows_custom": true,
    "custom_prefix": "CUSTOM-"
  }
}
