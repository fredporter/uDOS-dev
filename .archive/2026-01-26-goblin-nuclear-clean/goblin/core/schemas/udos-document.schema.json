{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://udos.local/schemas/udos-document.schema.json",
  "title": "uDOS Document Frontmatter",
  "description": "Schema for .udos.md document frontmatter",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^kb_[a-z0-9_]+$",
      "description": "Unique document identifier"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable title"
    },
    "type": {
      "type": "string",
      "enum": ["guide", "checklist", "reference", "workflow", "tutorial", "article"],
      "description": "Document type"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "submitted", "published", "archived", "deprecated"],
      "default": "draft",
      "description": "Document lifecycle status"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp"
    },
    "published": {
      "type": "string",
      "format": "date-time",
      "description": "Publication timestamp"
    },
    "author": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Author's unique ID"
        },
        "name": {
          "type": "string",
          "description": "Author's display name"
        },
        "rank": {
          "type": "string",
          "enum": ["novice", "contributor", "expert", "wizard", "system"],
          "description": "Author's trust rank"
        }
      },
      "required": ["id", "name"]
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "contribution": { "type": "string" },
          "date": { "type": "string", "format": "date" }
        },
        "required": ["id", "name"]
      }
    },
    "permissions": {
      "type": "object",
      "properties": {
        "edit": {
          "type": "string",
          "enum": ["author", "contributors", "experts", "wizards", "system"],
          "default": "contributors"
        },
        "suggest": {
          "type": "string",
          "enum": ["none", "contributors", "experts", "wizards", "all"],
          "default": "all"
        },
        "fork": {
          "type": "string",
          "enum": ["none", "contributors", "experts", "wizards", "all"],
          "default": "all"
        }
      }
    },
    "quality": {
      "type": "object",
      "properties": {
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "description": "Aggregate quality score"
        },
        "votes": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of ratings"
        },
        "verified": {
          "type": "boolean",
          "default": false,
          "description": "Expert-verified content"
        },
        "verified_by": {
          "type": "string",
          "description": "Verifier's ID"
        },
        "verified_date": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "trust": {
      "type": "object",
      "properties": {
        "citations": {
          "type": "integer",
          "minimum": 0,
          "description": "Times cited by other documents"
        },
        "usage_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Times accessed"
        },
        "report_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Abuse/error reports"
        }
      }
    },
    "tags": {
      "type": "object",
      "properties": {
        "primary": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Main topic tags"
        },
        "secondary": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Related topic tags"
        },
        "skill_level": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced", "expert"]
        },
        "time_required": {
          "type": "string",
          "pattern": "^\\d+\\s*(min|hour|day)s?$",
          "description": "Estimated time"
        }
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+(/[a-z0-9-]+)*$"
      },
      "description": "Hierarchical categories"
    },
    "links": {
      "type": "object",
      "properties": {
        "requires": {
          "type": "array",
          "items": { "$ref": "#/$defs/documentLink" },
          "description": "Prerequisites"
        },
        "related": {
          "type": "array",
          "items": { "$ref": "#/$defs/documentLink" },
          "description": "Related content"
        },
        "extends": {
          "type": "array",
          "items": { "$ref": "#/$defs/documentLink" },
          "description": "Parent documents"
        },
        "supersedes": {
          "type": "array",
          "items": { "$ref": "#/$defs/documentLink" },
          "description": "Replaced documents"
        },
        "children": {
          "type": "array",
          "items": { "$ref": "#/$defs/documentLink" },
          "description": "Sub-documents"
        }
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "binding": {
          "type": "string",
          "enum": ["none", "optional", "required", "exclusive"],
          "default": "none"
        },
        "tiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "coord": {
                "type": "string",
                "pattern": "^L\\d{3}:[A-Z]{2}\\d{2}(-[A-Z]{2}\\d{2})*$",
                "description": "Cascading coordinate"
              },
              "type": {
                "type": "string",
                "enum": ["origin", "relevant", "waypoint"]
              },
              "name": { "type": "string" }
            },
            "required": ["coord", "type"]
          }
        },
        "regions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "relevance": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              },
              "note": { "type": "string" }
            },
            "required": ["name", "relevance"]
          }
        }
      }
    },
    "executable": {
      "type": "boolean",
      "default": false,
      "description": "Contains runnable code blocks"
    },
    "runtime": {
      "type": "object",
      "properties": {
        "requires": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required extensions"
        },
        "sandbox": {
          "type": "boolean",
          "default": true,
          "description": "Run in sandbox mode"
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["checklist", "script", "workflow", "command"]
          }
        },
        "required": ["name", "type"]
      }
    },
    "overlay": {
      "type": "object",
      "properties": {
        "include_in": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Suggested overlays"
        },
        "exclude_from": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Excluded overlays"
        }
      }
    }
  },
  "required": ["title", "type"],
  "$defs": {
    "documentLink": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Target document ID"
        },
        "title": {
          "type": "string",
          "description": "Target document title (for display)"
        },
        "deprecated": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["id"]
    }
  }
}
